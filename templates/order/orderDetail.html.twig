{% extends 'base.html.twig' %}

{% block title %}Show cde Detail!{% endblock %}

{% block body %}
<h1>Detail des commandes</h1>

<div class="container">
                    {# {% dump(ols) %} #}

<h4 class="text-center mb-4 mt-4">Détail Commande n° <td>{{order.refCommande}}</td></h4>
    <tr>
                    
<table class="table table-dark">
<thead>
        <th>Nom Produit</th>
        <th>Quantité</th>
        <th>Montant</th>
        </tr>
</thead>
<tbody>
            {% for line in ols %}
                    {% dump(line) %}
                <tr>
                
                
                    <td>{{line.product.name}}</td>
                    <td>{{line.quantity}}</td>
                    <td>{{(line.total) | number_format(2, ',', '.')}} €</td>
                </tr>
            {% endfor %}
                <tr>
                    <td colspan="2">Total : </td>
                    <td>{{(order.montant) | number_format(2, ',', '.')}} €</td>
                </tr>
        </tbody>

        </table>
        <div class="valider">
            <a href="{{path('order_all')}}" class="btn btn-primary">Retourner aux commandes</a>
        </div>
</table>
</div>

{% endblock %}
